<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bg_gradient">

    <TextView
        android:id="@+id/logo_singIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="84dp"
        android:drawableRight="@drawable/mathproicon"
        android:text="MathPro"
        android:textColor="@color/white"
        android:textSize="48sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/profile_container"
        android:layout_width="340dp"
        android:layout_height="420dp"
        android:layout_marginTop="68dp"
        android:background="@drawable/shape_sing_in"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo_singIn">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/user_image"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:background="@drawable/shape"
            android:layout_marginTop="20dp"
            app:strokeWidth="10dp"
            android:padding="5dp"
            app:strokeColor="#F3DA80"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            app:shapeAppearanceOverlay="@style/circular"
            app:srcCompat="@drawable/ic_launcher_background" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text = "Name"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textSize="36sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text = "email_example@gmail.com"
            android:layout_gravity="center"
            android:textSize="20sp"/>
        <Button
            style="@style/DiscoverPlatformButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="45dp"
            android:text="Logout" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>